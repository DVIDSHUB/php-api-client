{
    "name": "dvids/api-client",
    "description": "Client for the DVIDS (Defense Video & Imagery Distribution System) APIs",
    "type": "library",
    "license": "MIT",
    "keywords": ["dvids", "api", "client", "defense", "military", "media", "upload"],
    "authors": [
        {
            "name": "DVIDSHUB",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "php-cs-fixer/shim": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "DvidsApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DvidsApi\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse src",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    }
}